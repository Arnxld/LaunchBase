{% extends "admins/layout.njk" %}

{% block head %}
    <title>Admin | Foodfy</title>
{% endblock %}

{% block content %}

    <div class="wrapper">
        <h1>Gerenciar receitas</h1>
        <a href="/admin/recipes/create">Cadastrar nova receita</a>
    </div>
        
    <section class="cards recipes">

    {% for recipe in recipes %}
        <div class="card"">
            <section style="background: url({{recipe.image}}) no-repeat center center / cover"></section>
            <div class="card-info">
                <p class="recipe-title">{{recipe.title}}</p>
                <p class="recipe-author">por {{recipe.chef_name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}

    </section>

{% endblock content %}
