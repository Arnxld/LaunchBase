{% extends "layout.njk" %}


{% block content %}

<div class="card table-container">
    <table>
        <thead>
            <tr>
                <th><span></span>Professor</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td><span style = "url()"></span>{{teacher.name}}</td>
                <td>{% for class in teacher.classes %}<span>{{class}}</span>{% endfor %}</td>
                <td><a href="/teachers/{{teacher.id}}">Visualizar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}