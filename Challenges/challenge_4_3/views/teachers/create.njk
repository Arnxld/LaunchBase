{% extends "layout.njk" %}


{% block content %}

<form class="card" method="POST" action="/teachers">
    <section 
        class = "avatar"
        style = "background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover">
    
    </section>
    <section class="details">

        <div class="item">
            <div>Nome</div>
            <div>
                <input 
                type="text" 
                name="name"
                placeholder="Nome">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="degree">
                    <option value="high_school">Ensino Médio Completo</option>
                    <option value="college">Ensino Superior Completo</option>
                    <option value="master">Mestrado</option>
                    <option value="doctor">Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="class_type" value="presential" checked>Presencial</span>
                <span><input type="radio" name="class_type" value="distance">A distância</span>
            </div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                <input type="text" name="services" placeholder="Separe as matérias por vírgula">
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>
{% endblock content %}